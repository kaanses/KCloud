@model PublicFileViewModel@{ViewData["Title"] = $"Shared File - {Model.File.FileName}";Layout = "_Layout"; }<div class="container-fluid py-4">    <div class="row justify-content-center">        <div class="col-md-8 col-lg-6">            <div class="card">                <div class="card-header bg-primary text-white">                    <h5 class="mb-0">                        <i class="bi bi-share me-2"></i>Shared File                    </h5>                </div>                <div class="card-body text-center">                    <div class="mb-4">                        @{                        var iconClass = GetFileIcon(Model.File.ContentType);                        }                        <i class="@iconClass" style="font-size: 4rem;"></i>                    </div>                    <h4 class="card-title">@Model.File.FileName</h4>                    <div class="row text-center mb-4">                        <div class="col">                            <small class="text-muted">Size</small>                            <div class="fw-bold">@FormatFileSize(Model.File.FileSizeBytes)</div>                        </div>                        <div class="col">                            <small class="text-muted">Type</small>                            <div class="fw-bold">@Model.File.ContentType</div>                        </div>                        <div class="col">                            <small class="text-muted">Uploaded</small>                            <div class="fw-bold">@Model.File.UploadedAt.ToString("MMM dd, yyyy")</div>                        </div>                    </div>                    <div class="d-grid">                        <a href="@Url.Action("Download", "File", new { id = @Model.File.Id, isPublicAccess = true })"                           class="btn btn-primary btn-lg">                            <i class="bi bi-download me-2"></i>Download File                        </a>                     </div>                    <div class="mt-3">                        <small class="text-muted">                            <i class="bi bi-info-circle me-1"></i>                            This file was shared with you via a public link                        </small>                    </div>                </div>            </div>        </div>    </div></div>@functions {private string GetFileIcon(string contentType){return contentType?.ToLower() switch{var ct when ct.StartsWith("image/") => "bi bi-image text-success",var ct when ct.StartsWith("video/") => "bi bi-play-btn text-info",var ct when ct.StartsWith("audio/") => "bi bi-music-note text-warning",var ct when ct.Contains("pdf") => "bi bi-file-pdf text-danger",var ct when ct.Contains("word") => "bi bi-file-word text-primary",var ct when ct.Contains("excel") => "bi bi-file-excel text-success",_ => "bi bi-file-earmark text-secondary"};}private string FormatFileSize(long bytes){string[] sizes = { "B", "KB", "MB", "GB", "TB" };double len = bytes;int order = 0;while (len >= 1024 && order < sizes.Length - 1){order++;len = len / 1024;}return $"{len:0.##} {sizes[order]}";}}