@{    ViewData["Title"] = "Pricing";}@section Styles {    <style>        .pricing-content-wrapper {            min-height: 100vh;            padding-top: 0.8rem;        }        .pricing-hero-section {            padding: 60px 0;            background: radial-gradient(circle at 50% 30%, rgba(212, 255, 0, 0.1) 0%, transparent 50%);            position: relative        }        .pricing-hero-section::before {            content: '';            position: absolute;            top: 0;            left: 0;            right: 0;            height: 1px;            background: linear-gradient(90deg, transparent, rgba(212, 255, 0, 0.8), transparent);        }        .pricing-hero-title {            font-family: 'Azeret Mono', monospace;            font-size: 3rem;            font-weight: 700;            background: linear-gradient(135deg, #d4ff00, #ffffff);            -webkit-background-clip: text;            -webkit-text-fill-color: transparent;            background-clip: text;            margin-bottom: 1.5rem;        }        .pricing-hero-subtitle {            font-family: 'Azeret Mono', monospace;            font-size: 1.2rem;            color: rgba(255, 255, 255, 0.8);            margin-bottom: 2rem;            line-height: 1.6;        }        .pricing-card {            background: rgba(255, 255, 255, 0.06);            backdrop-filter: blur(12px);            border: 2px solid rgba(255, 255, 255, 0.08);            border-radius: 24px;            padding: 2.5rem;            height: 100%;            transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);            position: relative;            overflow: hidden;        }        .pricing-card.featured {            border-color: #d4ff00;            transform: scale(1.05);            background: rgba(212, 255, 0, 0.08);        }        .pricing-card::before {            content: '';            position: absolute;            inset: 0;            padding: 2px;            background: linear-gradient(45deg, transparent, rgba(212, 255, 0, 0.3), transparent);            border-radius: inherit;            mask-composite: exclude;            opacity: 0;            transition: opacity 0.3s ease;        }        .pricing-card:hover::before {            opacity: 1;        }        .pricing-card:hover {            transform: translateY(-8px) scale(1.02);            background: rgba(255, 255, 255, 0.1);            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 0 20px rgba(212, 255, 0, 0.15);        }        .pricing-card.featured:hover {            transform: translateY(-8px) scale(1.07);            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5), 0 0 30px rgba(212, 255, 0, 0.3);        }        .pricing-tier-badge {            background: linear-gradient(135deg, #d4ff00, #b8e600);            color: #130623;            padding: 8px 16px;            border-radius: 12px;            font-size: 0.8rem;            font-weight: 600;            font-family: 'Azeret Mono', monospace;            text-transform: uppercase;            letter-spacing: 1px;            margin-bottom: 1.5rem;            display: inline-block;        }        .pricing-tier-badge.premium {            background: linear-gradient(135deg, #dc2626, #C11F1F);            color: white;        }        .pricing-tier-badge.god-tier {            background: linear-gradient(135deg, #1d4ed8, #1842B4);            color: white;            animation: godTierGlow 2s ease-in-out infinite alternate;        }               .pricing-title {            font-family: 'Azeret Mono', monospace;            font-size: 1.5rem;            font-weight: 700;            color: white;            margin-bottom: 1rem;        }        .pricing-price {            font-family: 'Azeret Mono', monospace;            font-size: 3rem;            font-weight: 700;            color: #d4ff00;            margin-bottom: 0.5rem;        }        .pricing-price.premium {            color: #dc2626;        }        .pricing-price.god-tier {            background: linear-gradient(135deg, #667eea, #764ba2);            -webkit-background-clip: text;            -webkit-text-fill-color: transparent;            background-clip: text;        }        .pricing-period {            font-family: 'Azeret Mono', monospace;            color: rgba(255, 255, 255, 0.7);            font-size: 0.9rem;            margin-bottom: 2rem;        }        .pricing-features {            list-style: none;            padding: 0;            margin: 2rem 0;        }        .pricing-features li {            font-family: 'Azeret Mono', monospace;            color: rgba(255, 255, 255, 0.8);            padding: 0.75rem 0;            border-bottom: 1px solid rgba(255, 255, 255, 0.1);            display: flex;            align-items: center;        }        .pricing-features li:last-child {            border-bottom: none;        }        .pricing-features li i {            color: #d4ff00;            margin-right: 12px;            font-size: 1.1rem;        }        .pricing-features .premium-feature i {            color: #ff6b6b;        }        .pricing-features .god-tier-feature i {            color: #667eea;        }        .pricing-btn {            width: 100%;            padding: 12px 24px;            border-radius: 12px;            font-family: 'Azeret Mono', monospace;            font-weight: 600;            font-size: 1rem;            border: 2px solid;            transition: all 0.3s ease;            text-decoration: none;            display: inline-block;            text-align: center;        }        .pricing-btn.free {            background: transparent;            border-color: #d4ff00;            color: #d4ff00;        }        .pricing-btn.free:hover {            background: #d4ff00;            color: #130623;            transform: translateY(-2px);        }        .pricing-btn.premium {            background: #C11F1F;            border-color: #dc2626;            color: white;        }        .pricing-btn.premium:hover {            background: #C11F1F;            border-color: #dc2626;            transform: translateY(-2px);            box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);        }        .pricing-btn.god-tier {            background: linear-gradient(135deg, #1D4FD7, #1842B4);            border-color: transparent;            color: white;            position: relative;            overflow: hidden;        }        .pricing-btn.god-tier:hover {            transform: translateY(-2px);            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);        }        .pricing-btn.god-tier::before {            content: '';            position: absolute;            top: 0;            left: -100%;            width: 100%;            height: 100%;            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);            transition: left 0.5s;        }        .pricing-btn.god-tier:hover::before {            left: 100%;        }        .pricing-section-title {            font-family: 'Azeret Mono', monospace;            color: white;            font-weight: 600;            margin-bottom: 1rem;            margin-top: 5rem;            text-align: center;        }        .pricing-section-subtitle {            font-family: 'Azeret Mono', monospace;            color: rgba(255, 255, 255, 0.7);            font-size: 1.1rem;            margin-bottom: 3rem;            text-align: center;        }        .popular-badge {            position: absolute;            top: 4px;            left: 50%;            transform: translateX(-50%);            background: #d4ff00;            color: #130623;            padding: 4px 15px;            border-radius: 20px;            font-size: 0.75rem;            font-weight: 700;            font-family: 'Azeret Mono', monospace;            text-transform: uppercase;            letter-spacing: 1px;        }    </style>}<div class="pricing-content-wrapper">    <section class="pricing-hero-section">        <div class="row justify-content-center text-center">            <div class="col-lg-8">                <h1 class="pricing-hero-title">Choose Your Plan</h1>                <p class="pricing-hero-subtitle">                    Scale your storage needs with plans designed for individuals, teams, and power users.                    All plans include our core security and collaboration features.                </p>            </div>        </div>    </section>        <div class="row g-4 mb-5">        <div class="col-lg-4 col-md-6">            <div class="pricing-card">                <div class="pricing-tier-badge">Free</div>                <h3 class="pricing-title">Starter</h3>                <div class="pricing-price">$0</div>                <div class="pricing-period">Forever free</div>                                <ul class="pricing-features">                    <li><i class="bi bi-check-circle-fill"></i> 5GB Storage</li>                    <li><i class="bi bi-check-circle-fill"></i> File Sharing</li>                    <li><i class="bi bi-check-circle-fill"></i> Basic Security</li>                    <li><i class="bi bi-check-circle-fill"></i> Web Access</li>                    <li><i class="bi bi-check-circle-fill"></i> Community Support</li>                    <li><i class="bi bi-check-circle-fill"></i> Up to 3 Collaborators</li>                </ul>                                <a href="@Url.Action("Register", "Auth")" class="pricing-btn free">                    Get Started Free                </a>            </div>        </div>                <div class="col-lg-4 col-md-6">            <div class="pricing-card featured">                <div class="popular-badge">Most Popular</div>                <div class="pricing-tier-badge premium">Premium</div>                <h3 class="pricing-title">Professional</h3>                <div class="pricing-price premium">$9</div>                <div class="pricing-period">per month</div>                                <ul class="pricing-features">                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> 500GB Storage</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Advanced Sharing</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Enhanced Security</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Mobile Apps</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Priority Support</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Unlimited Collaborators</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Version History</li>                    <li class="premium-feature"><i class="bi bi-check-circle-fill"></i> Advanced Analytics</li>                </ul>                                <a href="@Url.Action("Register", "Auth")" class="pricing-btn premium">                    Currently Unavailable                </a>            </div>        </div>                <div class="col-lg-4 col-md-6">            <div class="pricing-card">                <div class="pricing-tier-badge god-tier">God Tier</div>                <h3 class="pricing-title">Enterprise</h3>                <div class="pricing-price god-tier">$25</div>                <div class="pricing-period">per month</div>                                <ul class="pricing-features">                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> Unlimited Storage</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> White-label Solution</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> Enterprise Security</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> API Access</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> 24/7 Dedicated Support</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> Custom Integrations</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> Advanced Admin Controls</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> SLA Guarantee</li>                    <li class="god-tier-feature"><i class="bi bi-check-circle-fill"></i> Custom Domains</li>                </ul>                                <a href="#" class="pricing-btn god-tier">                    <span style="position: relative; z-index: 1;">Currently Unavailable</span>                </a>            </div>        </div>    </div>        <div class="text-center mb-5 mt-5">        <h2 class="pricing-section-title">All Plans Include</h2>        <p class="pricing-section-subtitle">Core features that make KCloud the best choice for your files</p>                <div class="row g-4">            <div class="col-md-3 col-6">                <div class="text-center">                    <i class="bi bi-shield-check" style="font-size: 2rem; color: #d4ff00; margin-bottom: 1rem;"></i>                    <h6 style="color: white; font-family: 'Azeret Mono', monospace;">End-to-End Encryption</h6>                </div>            </div>            <div class="col-md-3 col-6">                <div class="text-center">                    <i class="bi bi-lightning-charge" style="font-size: 2rem; color: #d4ff00; margin-bottom: 1rem;"></i>                    <h6 style="color: white; font-family: 'Azeret Mono', monospace;">Lightning Fast</h6>                </div>            </div>            <div class="col-md-3 col-6">                <div class="text-center">                    <i class="bi bi-globe" style="font-size: 2rem; color: #d4ff00; margin-bottom: 1rem;"></i>                    <h6 style="color: white; font-family: 'Azeret Mono', monospace;">Global Access</h6>                </div>            </div>            <div class="col-md-3 col-6">                <div class="text-center">                    <i class="bi bi-heart-fill" style="font-size: 2rem; color: #d4ff00; margin-bottom: 1rem;"></i>                    <h6 style="color: white; font-family: 'Azeret Mono', monospace;">Made with Love</h6>                </div>            </div>        </div>    </div>        <div class="text-center pb-5 mt-5">        <h2 style="margin-top: 5px" class="pricing-section-title">Questions?</h2>        <p style="color: rgba(255, 255, 255, 0.8); font-family: 'Azeret Mono', monospace; margin-bottom: 2rem; margin-top: 2rem">            Need help choosing the right plan? We're here to help you find the perfect fit for your needs.        </p>    </div></div>