@{    ViewData["Title"] = "Home";    Layout = "_Layout";}@section Styles {      <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />}@if (User.Identity.IsAuthenticated){<meta name="username" content="@User.Identity.Name" />}<div class="home-content-wrapper">    <div class="container-fluid">        <div class="row split-container">            <div class="col-lg-6 left-section">                <h2 class="how-to-title">How to Use KCloud</h2>                <p class="how-to-subtitle">                    Get started with KCloud in four simple steps. Designed to be intuitive, powerful, and beautiful.                </p>                                <div class="steps-grid">                    <div class="step-item" onclick="handleStepClick('signup')">                        <div class="step-number">1</div>                        <i class="bi bi-person-plus step-icon"></i>                        <h3 class="step-title">Sign Up</h3>                        <p class="step-description">Create your free account in seconds</p>                    </div>                    <div class="step-item" onclick="handleStepClick('upload')">                        <div class="step-number">2</div>                        <i class="bi bi-cloud-upload step-icon"></i>                        <h3 class="step-title">Upload</h3>                        <p class="step-description">Drag & drop files or click to upload</p>                    </div>                    <div class="step-item" onclick="handleStepClick('organize')">                        <div class="step-number">3</div>                        <i class="bi bi-folder-plus step-icon"></i>                        <h3 class="step-title">Organize</h3>                        <p class="step-description">Create folders and manage your files</p>                    </div>                    <div class="step-item" onclick="handleStepClick('share')">                        <div class="step-number">4</div>                        <i class="bi bi-share step-icon"></i>                        <h3 class="step-title">Share</h3>                        <p class="step-description">Collaborate and share securely</p>                    </div>                </div>                                <div class="process-summary">                    <div class="summary-big-icon">                        <i class="bi bi-cloud-check"></i>                    </div>                    <h3 class="summary-title">Your Files, Simplified</h3>                    <p class="summary-description">                        KCloud transforms how you manage files. Upload, organize, share, and access from anywhere with enterprise security and beautiful design.                    </p>                </div>            </div>            <div class="col-lg-6 right-section">                <h1 class="hero-title">Welcome to KCloud</h1>                <p class="hero-subtitle">                    Your personal, secure, and beautiful cloud storage solution. Store, share, and manage files with confidence.                </p>                                <div class="hero-visual">                    <i class="bi bi-cloud"></i>                </div>                                <div class="hero-cta">                    @if (User.Identity?.IsAuthenticated == true)                    {                        <a href="@Url.Action("Index", "File")" class="cta-btn">                            <i class="bi bi-folder-open me-2"></i>Go to My Files                        </a>                    }                    else                    {                        <a href="@Url.Action("Register", "Auth")" class="cta-btn">                            <i class="bi bi-person-plus me-2"></i>Get Started Free                        </a>                        <a href="@Url.Action("Login", "Auth")" class="cta-btn cta-btn-outline">                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In                        </a>                    }                </div>                                <div class="features-list">                    <div class="feature-item">                        <i class="bi bi-shield-check"></i>                        <span>End-to-end encryption</span>                    </div>                    <div class="feature-item">                        <i class="bi bi-lightning"></i>                        <span>Lightning fast uploads</span>                    </div>                    <div class="feature-item">                        <i class="bi bi-globe"></i>                        <span>Access from anywhere</span>                    </div>                    <div class="feature-item">                        <i class="bi bi-heart"></i>                        <span>Built with love</span>                    </div>                </div>            </div>        </div>    </div></div>@section Scripts {    <script>        function handleStepClick(step) {            const isAuthenticated = @Html.Raw(Json.Serialize(User.Identity?.IsAuthenticated == true));            switch(step) {                case 'signup':                    if (!isAuthenticated) {                        window.location.href = '@Url.Action("Register", "Auth")';                    } else {                        window.location.href = '@Url.Action("Index", "File")';                    }                    break;                case 'upload':                case 'organize':                case 'share':                    if (isAuthenticated) {                        window.location.href = '@Url.Action("Index", "File")';                    } else {                        window.location.href = '@Url.Action("Register", "Auth")';                    }                    break;            }        }    </script>}