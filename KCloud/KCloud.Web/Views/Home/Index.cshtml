@{    ViewData["Title"] = "Home";    Layout = "_Layout";}<div class="hero-section bg-primary text-white py-5">    <div class="container">        <div class="row align-items-center min-vh-75">            <div class="col-lg-6">                <h1 class="display-4 fw-bold mb-4">                    Welcome to <span class="text-warning">KCloud</span>                </h1>                <p class="lead mb-4">                    Your personal cloud storage solution. Store, organize, and share your files securely from anywhere in the world.                </p>                @if (User.Identity?.IsAuthenticated != true)                {                    <div class="d-flex gap-3 flex-wrap">                        <a href="@Url.Action("Register", "Auth")" class="btn btn-warning btn-lg px-4">                            <i class="bi bi-person-plus me-2"></i>Get Started Free                        </a>                        <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-light btn-lg px-4">                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In                        </a>                    </div>                }                else                {                    <div class="d-flex gap-3 flex-wrap">                        <a href="@Url.Action("Index", "Files")" class="btn btn-warning btn-lg px-4">                            <i class="bi bi-folder me-2"></i>My Files                        </a>                        <a href="@Url.Action("Upload", "Files")" class="btn btn-outline-light btn-lg px-4">                            <i class="bi bi-cloud-upload me-2"></i>Upload Files                        </a>                    </div>                }            </div>            <div class="col-lg-6 text-center">                <i class="bi bi-cloud-arrow-up display-1 text-warning"></i>            </div>        </div>    </div></div><div class="container py-5">    @if (User.Identity?.IsAuthenticated == true)    {        <div class="row">            <div class="col-12">                <div class="alert alert-success d-flex align-items-center" role="alert">                    <i class="bi bi-check-circle-fill me-3"></i>                    <div>                        <strong>Welcome back, @User.Identity.Name!</strong>                         You're successfully logged in to KCloud.                    </div>                </div>            </div>        </div>    }    <div class="row g-4">        <div class="col-md-4">            <div class="card h-100 shadow-sm">                <div class="card-body text-center">                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>                    <h5 class="card-title mt-3">Secure Storage</h5>                    <p class="card-text">Your files are protected with enterprise-grade security and encryption.</p>                </div>            </div>        </div>        <div class="col-md-4">            <div class="card h-100 shadow-sm">                <div class="card-body text-center">                    <i class="bi bi-globe text-success" style="font-size: 3rem;"></i>                    <h5 class="card-title mt-3">Access Anywhere</h5>                    <p class="card-text">Access your files from any device, anywhere in the world, anytime.</p>                </div>            </div>        </div>        <div class="col-md-4">            <div class="card h-100 shadow-sm">                <div class="card-body text-center">                    <i class="bi bi-share text-info" style="font-size: 3rem;"></i>                    <h5 class="card-title mt-3">Easy Sharing</h5>                    <p class="card-text">Share files and folders with friends and colleagues effortlessly.</p>                </div>            </div>        </div>    </div></div><style>.hero-section {    background: linear-gradient(135deg, var(--bs-primary) 0%, #4f46e5 100%);}.min-vh-75 {    min-height: 75vh;}.card {    transition: transform 0.2s ease-in-out;}.card:hover {    transform: translateY(-5px);}</style>