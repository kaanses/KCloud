@model KCloud.Web.Models.ViewModel.RegisterViewModel@{    ViewData["Title"] = "Register";    Layout = "_Layout";}@section Styles {    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />}<div class="auth-content-wrapper">    <!-- Hero Section -->    <section class="auth-hero-section">        <div class="row justify-content-center">            <div class="col-lg-6 col-md-8">                <div class="text-center">                    <h1 class="auth-hero-title">Join KCloud</h1>                    <p class="auth-hero-subtitle">Create your account and start storing files securely</p>                </div>            </div>        </div>    </section>    <!-- Register Card -->    <div class="row justify-content-center">        <div class="col-lg-5 col-md-7 col-sm-9">            <div class="auth-card">                <div class="auth-header">                    <div class="auth-logo">                        <i class="bi bi-person-plus"></i>                    </div>                    <h2 class="auth-title">Create Account</h2>                    <p class="auth-subtitle">Get started with your free KCloud account</p>                </div>                <form asp-action="Register" method="post" novalidate>                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />                    @Html.AntiForgeryToken()                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>                    <div class="auth-form-group">                        <label asp-for="Username" class="auth-label">                            <i class="bi bi-person"></i>Username                        </label>                        <input asp-for="Username" class="form-control auth-input" type="text" placeholder="Choose a unique username" />                        <span asp-validation-for="Username" class="validation-error"></span>                    </div>                    <div class="auth-form-group">                        <label asp-for="Email" class="auth-label">                            <i class="bi bi-envelope"></i>Email Address                        </label>                        <input asp-for="Email" class="form-control auth-input" type="email" placeholder="Enter your email address" />                        <span asp-validation-for="Email" class="validation-error"></span>                    </div>                    <div class="auth-form-group">                        <label asp-for="Password" class="auth-label">                            <i class="bi bi-lock"></i>Password                        </label>                        <input asp-for="Password" class="form-control auth-input" type="password" placeholder="Create a strong password" />                        <div class="password-requirements">                            <p>Password must include: 8+ characters, uppercase, lowercase, and number</p>                        </div>                        <span asp-validation-for="Password" class="validation-error"></span>                    </div>                    <button type="submit" class="auth-btn">                        <i class="bi bi-person-plus me-2"></i>                        <span style="position: relative; z-index: 1;">Create My KCloud Account</span>                    </button>                    <div class="feature-highlight">                        <div style="text-align: center; margin-bottom: 1rem;">                            <span style="color: #d4ff00; font-family: 'Azeret Mono', monospace; font-weight: 600; font-size: 0.9rem;">                                ðŸŽ‰ What you get with KCloud:                            </span>                        </div>                        <div class="feature-list">                            <div class="feature-item">                                <i class="bi bi-shield-check"></i>                                <span>Secure Storage</span>                            </div>                            <div class="feature-item">                                <i class="bi bi-people"></i>                                <span>Easy Sharing</span>                            </div>                            <div class="feature-item">                                <i class="bi bi-cloud"></i>                                <span>5GB Free</span>                            </div>                        </div>                    </div>                    <div class="auth-footer">                        <p>                            Already have an account?                             <a href="@Url.Action("Login", "Auth", new { returnUrl = ViewData["ReturnUrl"] })" class="auth-link">                                Sign in here                            </a>                        </p>                    </div>                </form>            </div>        </div>    </div></div>