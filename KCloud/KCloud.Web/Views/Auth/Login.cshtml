@model KCloud.Web.Models.ViewModel.LoginViewModel@{ViewData["Title"] = "Login";Layout = "_Layout";}@section Styles {<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />}<div class="auth-content-wrapper">    <!-- Hero Section -->    <section class="auth-hero-section">        <div class="row justify-content-center">            <div class="col-lg-6 col-md-8">                <div class="text-center">                    <h1 class="auth-hero-title">Welcome Back</h1>                    <p class="auth-hero-subtitle">Sign in to access your secure cloud storage</p>                </div>            </div>        </div>    </section>    <!-- Login Card -->    <div class="row justify-content-center">        <div class="col-lg-5 col-md-7 col-sm-9">            <div class="auth-card">                <div class="auth-header">                    <div class="auth-logo">                        <i class="bi bi-cloud-check"></i>                    </div>                    <h2 class="auth-title">KCloud Login</h2>                    <p class="auth-subtitle">Enter your credentials to continue</p>                </div>                <form asp-action="Login" method="post" novalidate>                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />                    @Html.AntiForgeryToken()                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>                    <div class="auth-form-group">                        <label asp-for="Email" class="auth-label">                            <i class="bi bi-envelope"></i>Email Address                        </label>                        <input asp-for="Email" class="form-control auth-input" type="email" placeholder="Enter your email address" />                        <span asp-validation-for="Email" class="validation-error"></span>                    </div>                    <div class="auth-form-group">                        <label asp-for="Password" class="auth-label">                            <i class="bi bi-lock"></i>Password                        </label>                        <input asp-for="Password" class="form-control auth-input" type="password" placeholder="Enter your password" />                        <span asp-validation-for="Password" class="validation-error"></span>                    </div>                    <button type="submit" class="auth-btn">                        <i class="bi bi-box-arrow-in-right me-2"></i>                        <span style="position: relative; z-index: 1;">Sign In to KCloud</span>                    </button>                    <div class="auth-footer">                        <p>                            Don't have an account?                            <a href="@Url.Action("Register", "Auth", new { returnUrl = ViewData["ReturnUrl"] })" class="auth-link">                                Create one here                            </a>                        </p>                    </div>                </form>            </div>        </div>    </div></div>